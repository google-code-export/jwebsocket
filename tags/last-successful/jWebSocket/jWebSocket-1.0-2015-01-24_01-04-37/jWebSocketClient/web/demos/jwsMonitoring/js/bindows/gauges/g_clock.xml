
<Gauge2 coordWidth="1000" coordHeight="1000" left="0" top="0" bottom="0" right="0">

    
    <!-- Background -->
    <Gauge2CircularBorder width="950" height="950" centerX="500" centerY="500" strokeWidth="20" stroke="#999999">
        <Gauge2CircularBorder.Filler>
            <Gauge2PlainColorFiller color="#FFFFFF"/>
        </Gauge2CircularBorder.Filler>
    </Gauge2CircularBorder>

    <!-- Range -->
    <Gauge2RadialRange centerX="500" centerY="500" width="1000" height="1000" startAngle="Infinity" endAngle="360">
        <!-- Scale -->
        <Gauge2RadialScale font="70 Verdana" foreColor="#FFFFFF" radius="320" startValue="Infinity" endValue="12" labelCount="0"/>
    </Gauge2RadialRange>

    <!-- Range -->
    <Gauge2RadialRange centerX="500" centerY="500" width="1000" height="1000" startAngle="0" endAngle="360">

        <!-- Ticks -->
        <Gauge2RadialTicks tickWidth="2" tickLength="10" color="#AAAAAA" tickCount="61" radius="400"/>
        <Gauge2RadialTicks tickWidth="5" tickLength="30" color="#AAAAAA" tickCount="13" radius="405"/>
        <Gauge2RadialTicks tickWidth="10" tickLength="50" color="#CCCCCC" tickCount="5" radius="405"/>

        <!-- Scale -->
        <Gauge2RadialScale radius="360" startValue="0" endValue="12">
            
            <!-- Needle -->
            <Gauge2RadialNeedle id="needleHours" value="6" stroke="#000000" strokeWidth="1"
                                innerRadius="0" innerWidth="15"
                                outerRadius="200" outerWidth="15">
                <Gauge2RadialNeedle.Filler>
                    <Gauge2RadialGradientFiller color1="#111111" color2="#666666"/>
                </Gauge2RadialNeedle.Filler>
            </Gauge2RadialNeedle>
        </Gauge2RadialScale>

        <Gauge2RadialScale radius="360" startValue="0" endValue="60">
            
            <!-- Needle -->
            <Gauge2RadialNeedle id="needleMinutes" value="10" stroke="#000000" strokeWidth="1"
                                innerRadius="0" innerWidth="10"
                                outerRadius="260" outerWidth="10">
                <Gauge2RadialNeedle.Filler>
                    <Gauge2RadialGradientFiller color1="#111111" color2="#666666"/>
                </Gauge2RadialNeedle.Filler>
            </Gauge2RadialNeedle>
        </Gauge2RadialScale>

        <Gauge2RadialScale radius="360" startValue="0" endValue="60">
            
            <!-- Needle -->
            <Gauge2RadialNeedle id="needleSeconds" value="40" stroke="#000000" strokeWidth="0"
                                innerRadius="-80" innerWidth="10"
                                outerRadius="380" outerWidth="10">
                <Gauge2RadialNeedle.Filler>
                    <Gauge2RadialGradientFiller color1="#FF1111" color2="#FF6666"/>
                </Gauge2RadialNeedle.Filler>
            </Gauge2RadialNeedle>
        </Gauge2RadialScale>
        
        <!-- Cap -->
        <Gauge2BasicCap width="50" height="50">
            <Gauge2BasicCap.Filler>
                <Gauge2LinearGradientFiller angle="40" color1="#AAAAAA" color2="#666666"/>
            </Gauge2BasicCap.Filler>
        </Gauge2BasicCap>

    </Gauge2RadialRange>

</Gauge2>