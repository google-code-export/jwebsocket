                    <Gauge2RadialGradientFiller color1="#367CBB" color2="#367CBB"/>
                </Gauge2RadialNeedle.Filler>
            </Gauge2RadialNeedle>

        </Gauge2RadialScale>

    </Gauge2RadialRange>

