<?xml version="1.0" encoding="UTF-8"?>
<assembly>
	<!-- this id is appended to filename given in pom.xml -->
	<id>${project.version}</id>
	<formats>
		<format>jar</format>
	</formats>
	
	<includeBaseDirectory>false</includeBaseDirectory>
	
	<dependencySets>
		
		<dependencySet>
			<outputDirectory/>
			<includes>
				<include>${groupId}:${artifactId}</include>
				<include>org.fusesource:sigar</include>
			</includes>
			<unpack>true</unpack>
		</dependencySet>		
		
	</dependencySets>
</assembly>