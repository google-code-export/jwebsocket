<?xml version="1.0" encoding="UTF-8"?>
<assembly>
	<!-- this id is appended to filename given in pom.xml -->
	<id>${project.version}</id>
	<formats>
		<format>jar</format>
	</formats>
	
	<includeBaseDirectory>false</includeBaseDirectory>
	
	<dependencySets>

		<dependencySet>
			<outputDirectory/>
			<includes>
				<include>${groupId}:${artifactId}</include>
				<include>org.apache.httpcomponents:httpcore</include>
				<include>org.apache.httpcomponents:httpmime</include>
				<include>org.apache.httpcomponents:httpclient</include>
				<include>org.twitter4j:twitter4j-core</include>
				<include>org.twitter4j:twitter4j-async</include>
				<include>org.twitter4j:twitter4j-stream</include>
				<include>org.twitter4j:twitter4j-httpclient-support</include>
			</includes>
			<unpack>true</unpack>
		</dependencySet>		
		
	</dependencySets>
</assembly>