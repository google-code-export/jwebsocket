<?xml version="1.0" encoding="UTF-8"?>
<assembly>
	<!-- jWebSocketCommon -->
	<!-- this id is appended to filename given in pom.xml -->
	<id>${project.version}</id>
	<formats>
		<format>jar</format>
	</formats>
	
	<includeBaseDirectory>false</includeBaseDirectory>
	
	<dependencySets>
		
		<dependencySet>
			<outputDirectory/>
			<includes>
				<include>${groupId}:${artifactId}</include>
				
				<!-- from jWebSocketDynamicSQL -->
				<include>org.jwebsocket:jWebSocketDynamicSQL</include>
				<include>org.apache.ddlutils:ddlutils</include>
				<include>com.healthmarketscience.common:common-util</include>
				<include>com.healthmarketscience.sqlbuilder:sqlbuilder</include>

				<!-- from jWebSocketLDAP -->
				<include>org.jwebsocket:jWebSocketLDAP</include>
				<!-- from jWebSocketSSO -->
				<include>org.jwebsocket:jWebSocketSSO</include>
				<include>org.apache.httpcomponents:httpclient</include>
				<include>org.apache.httpcomponents:httpcore</include>

				<!-- from various others -->
				<include>commons-lang:commons-lang</include>
				<include>commons-logging:commons-logging</include>
				<include>commons-configuration:commons-configuration</include>
												
				<!-- from jWebSocketCommon -->
				<include>org.jwebsocket:jWebSocketCommon</include>
				<include>javolution:javolution</include>
				<include>com.fasterxml.jackson.core:jackson-annotations</include>
				<include>com.fasterxml.jackson.core:jackson-core</include>
				<include>com.fasterxml.jackson.core:jackson-databind</include>
				<!--
				<include>org.codehaus.jackson:jackson-core-asl</include>
				<include>org.codehaus.jackson:jackson-mapper-asl</include>
				-->
				<include>org.netbeans.external:json-2</include>
				<include>org.springframework:spring-core</include>
				<include>commons-io:commons-io</include>
				<include>commons-codec:commons-codec</include>
				<include>org.apache.commons:commons-compress</include>
				<include>org.apache.activemq:activemq-all</include>
				
				<!-- from jWebSocketClientAPI -->
				<include>org.jwebsocket:jWebSocketClientAPI</include>
				
				<!-- from jWebSocketJavaSEClient -->
				<include>org.jwebsocket:jWebSocketJavaSEClient</include>
				
				<!-- from jWebSocketJMSEndPoint -->
				<include>org.jwebsocket:jWebSocketJMSEndPoint</include>
				<!-- from jWebSocketJMSServer -->
				<include>org.jwebsocket:jWebSocketJMSServer</include>
				<!-- from jWebSocketJMSClient -->
				<!-- <include>org.jwebsocket:jWebSocketJMSClient</include> -->
			</includes>
			<unpack>true</unpack>
		</dependencySet>
		
	</dependencySets>
	
</assembly>